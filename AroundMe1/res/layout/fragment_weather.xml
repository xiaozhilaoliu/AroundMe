<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/weather_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
      <TextView 
        android:id="@+id/tv_date"
       	android:layout_centerHorizontal="true"
       	android:layout_centerVertical="true"
        android:text="Date:"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
       <DigitalClock 
        android:id="@+id/time_dc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/tv_date"/>
        <TextView 
        android:id="@+id/tv_temp"
        android:layout_below="@id/tv_date"
        android:textSize="30sp"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:text="Tempeture:"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
   		<TextView 
        android:id="@+id/tv_city"
        android:layout_below="@id/tv_date"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_alignParentRight="true"
        android:text="City:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
   		<TextView 
        android:id="@+id/tv_huminity"
        android:layout_below="@id/tv_temp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_alignParentLeft="true"
        android:text="Humity:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
       <com.wlcg.aroundme.cc.util.widget.RotateImageView
            android:layout_below="@id/tv_city"
            android:layout_alignParentRight="true"
            android:id="@+id/title_update_progress"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:src="@drawable/title_update" />

、       <Button
            android:layout_below="@id/title_update_progress"
            android:layout_alignParentRight="true"
            android:background="@drawable/location"
            android:id="@+id/location_bt"
           	android:layout_alignParentTop="true"
           	android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"/>  	

</RelativeLayout>
